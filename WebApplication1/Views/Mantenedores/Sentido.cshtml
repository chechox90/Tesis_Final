@{
    ViewBag.Title = "Servicio";
}

<style>
    .borderInput {
        margin: 10px;
    }

    .divFlot {
        text-align: right
    }

    .container-title {
        display: flex;
    }

    .btn-x {
        margin-left: auto
    }
</style>

<div class="page-title">
    <div class="content-title">
        <h3>Sentido</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page"><a href="#">Mantenedor</a></li>
            </ol>
        </nav>
    </div>
</div>

<div class="content-filters-b">
    <div class="card">
        <div class="form-row">
            <button class="btn btn-success" type="button" id="btnNuevoBus" onclick="VerNuevoSentido();"><i class="far fa-plus"></i> Nuevo Sentido</button>
        </div>
    </div>
</div>

<div class="card ">
    <div class="modal-body">
        <div class="form-row contiener-row">
            <div class="borderInput">
                <h4 class="modal-title text-success">Sentido</h4>
            </div>
        </div>
        <div class="form-row contiener-row">
            <hr class="col-12" />
            <div class="col-md-4">
                <div class="form-group">
                    <label class="borderInput" for="NombreSentido">Sentido </label>
                    <select id="ddlSentido" onchange="SeleccionarSenCorto();" name="NombreSentido" class="form-control borderInput"></select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="borderInput" for="SentidoCorto">Sentido Abreviado </label>
                    <select id="ddlSentidoCorto" onchange="SeleccionarSen();" name="SentidoCorto" class="form-control borderInput"></select>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-success" Style="display:none" type="button" id="btnShowEdit" onclick="ShowEditarSentido();"><i class="fas fa-edit"></i> Editar</button>
            <button class="btn btn-danger" Style="display:none" id="btnEliminarSentido" onclick="ShowModalEliminar();"><i class="fas fa-trash"></i> Eliminar</button>
        </div>
    </div>
    <div class="ocultar">
        <div class="modal-body">
            <div class="form-row contiener-row">
                <div class="col-md-4" id="divSentidoNew">
                    <div>
                        <label for="NombreSentido">Nombre Sentido *</label>
                        <input id="txtNomSentido" onblur="CamelCase(this);" type="text" name="NombreSentido" maxlength="50" onkeypress="return Sololetras(event)" placeholder="Nombre Sentido" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4" id="divSentidoEdit" style="display:none">
                    <div class="form-group">
                        <label for="NombreSentidoEdit">Nombre Sentido</label>
                        <input id="txtNomSentidoEdit" type="text" onblur="CamelCase(this);" name="NombreSentidoEdit" onkeypress="return Sololetras(event)" maxlength="30" placeholder="Nombre Sentido" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="NombreSentidoCorto">Nombre Sentido Abreviado *</label>
                        <input id="txtNomSentidoCorto" type="text" name="NombreSentidoCorto" onkeypress="return Sololetras(event)" maxlength="5" placeholder="Nombre Sentido Abreviado" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-row contiener-row">
                <div class="col-md-4" id="divSentidoNew">
                    <label class="text-danger">* Todos los campos son requeridos</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-light borderInput" onclick="Limpiar();">Cancelar</button>
                <button type="button" class="btn btn-success borderInput" id="btnEditarSentido" style="display:none" onclick="ConfirmarEdicion();"><i class="fas fa-edit"></i> Guardar</button>
                <button type="button" class="btn btn-success" id="btnGuardarSentido" onclick="GuardarNuevoSentido();"><i class="fas fa-edit"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>

<br />

<div class="modal fade" id="modalConfirmacion" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content shadow">
            <div class="modal-title">
                <div class="text-center">
                    <h3>¡Confirmar acción!</h3>
                </div>
            </div>
            <div class="modal-body">
                <div>
                    <label>¿Está seguro que desea <span id="txtMostrar"></span> el Sentido?</label>
                    <span id="lblNomComuna" class="text-primary"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-light" id="btnCancelar" onclick="CerrarModal();">Cancelar</button>
                <button type="button" class="btn btn-danger" id="btnEliminar" onclick="EliminarSentido();"><i class="fas fa-trash"></i> Eliminar</button>
                <button type="button" class="btn btn-success" id="btnAceptarEditar" onclick="GuardarEdicionSentido();"><i class="fas fa-check"></i> Confirmar</button>
            </div>
        </div>
    </div>
</div>



@section scripts
    {
    <script>
        $(document).ready(function () {
            $(".ocultar").css("display", "none");
            $("#btnEditarSentido").css("display", "none");
            $("#btnEliminarSentido").css("display", "none");
            CargarSentido();
        });

        function verMotivo() {
            $(".ocultar").css("display", "")
        }

        function Limpiar() {
            $(".ocultar").css("display", "none");
            $("#btnGuardarSentido").css('display', "none");
            $("#btnAceptarEditar").css('display', 'none');
            $("#divSentidoEdit").css('display', 'none');

            $("#txtNomSentido").val("");
            $("#txtNomSentidoCorto").val("");

            $("#divSentidoNew").css('display', '');

            $("#btnEditarSentido").css('display', 'none');
            $("#btnEliminar").css('display', 'none');
            $("#btnEliminarSentido").css('display', 'none');
            $("#btnShowEdit").css('display', 'none');

            $("#ddlSentido").empty();
            $("#ddlSentidoCorto").empty();
            CargarSentido();
        }

        function EliminarSentido() {
            let idSentido = $("#ddlSentido").val();

            $.ajax({
                url: '../Mantenedor/SetEliminarSentido',
                type: 'post',
                datatype: 'json',
                async: false,
                data: {
                    "idSentido": idSentido
                },
                success: function (data) {
                    if (data.Data.alert == "success") {
                        setTimeout(function () {
                            alertSuccess(data.Data.message);
                        }, 500);
                        CerrarModal();
                        Limpiar();

                    } else {
                        alertDanger(data.Data.message);
                    }
                },
                error: function () {
                    CerrarModal();
                    alertDanger("Ha ocurrido una incidencia, inténtelo nuevamente");
                }
            });
        }

        function ShowModalEliminar() {
            $("#btnEliminar").css('display', '');
            $("#divMotivoEliminar").css('display', '');
            var sentido = $("#ddlSentido option:selected").text();
            $("#btnAceptarEditar").css('display', 'none');
            $("#btnEliminarSentido").css('display', '');
            $("#txtMostrar").text("eliminar")
            $("#lblNomSentido").text(sentido);
            $("#modalConfirmacion").modal("show");
        }

        function CerrarModal() {
            $("#modalConfirmacion").modal("hide");
        }

        function CargarSentido() {
            $.ajax({
                url: '../Mantenedor/GetSentidoCmb',
                type: 'post',
                datatype: 'json',
                async: false,
                success: function (data) {
                    for (var i = 0; i < data.data.length; i++) {
                        var option = $(document.createElement('option'));

                        option.val(data.data[i]["ID_SENTIDO"]);
                        option.text(data.data[i]["NOMBRE_SENTIDO"]);
                        $("#ddlSentido").append(option);
                    }

                    for (var i = 0; i < data.data.length; i++) {
                        var option = $(document.createElement('option'));

                        option.val(data.data[i]["ID_SENTIDO"]);
                        option.text(data.data[i]["NOMBRE_CORTO_SENTIDO"]);
                        $("#ddlSentidoCorto").append(option);
                    }

                }
            });

        }

        function ShowEditarSentido() {
            var sentido = $("#ddlSentido option:selected").text();
            var sentidoCorto = $("#ddlSentidoCorto option:selected").text();
            $("#txtNomSentidoEdit").val(sentido);
            $("#txtNomSentidoCorto").val(sentidoCorto);

            $("#divSentidoNew").css('display', 'none');
            $("#divSentidoEdit").css('display', '');

            $("#btnEditarSentido").css('display', '');

            $("#btnEliminarSentido").css('display', 'none');
            $("#btnGuardarSentido").css('display', 'none');
            $("#divSentidoEdit").css('display', '');
            verMotivo();
        }

        function GuardarNuevoSentido() {
            let sentido = $("#txtNomSentido option:selected").val();
            let sentidoCorto = $("#txtNomSentidoCorto option:selected").val();

            var respuesta = ValidacionesGenerales(sentido, sentidoCorto)
            if (respuesta == "") {
                $.ajax({
                    url: '../Mantenedor/SetNuevoSentido',
                    type: 'post',
                    datatype: 'json',
                    async: false,
                    data: {
                        "sentido": sentido,
                        "sentidoCorto": sentidoCorto,

                    },
                    success: function (data) {
                        if (data.Data.alert == "success") {
                            Limpiar();
                            setTimeout(function () {
                                alertSuccess(data.Data.message);
                            }, 500);

                            Limpiar();
                        } else {
                            alertDanger(data.Data.message);
                        }

                    },
                    error: function () {
                        CerrarModal();
                        alertDanger("Ha ocurrido una incidencia, lo resolveremos a la brevedad");
                    }
                });
            } else {
                alertDanger(respuesta);
            }

        }

        function GuardarEdicionSentido() {
            var SENTIDO =
            {
                ID_SENTIDO: $("#ddlSentido").val(),
                NOMBRE_SENTIDO: $("#txtNomSentidoEdit").text(),
                NOMBRE_CORTO_SENTIDO: $("#txtNomSentidoCorto").val()
            };

            $.ajax({
                url: '../Mantenedor/SetEditarSentido',
                type: 'post',
                datatype: 'json',
                async: false,
                data: {
                    "SENTIDO": SENTIDO
                },
                success: function (data) {
                    if (data.Data.alert == "success") {
                        setTimeout(function () {
                            alertSuccess(data.Data.message);
                        }, 500);
                        CerrarModal();
                        Limpiar();

                    } else {
                        alertSuccess(data.Data.message);
                    }

                }, error: function () {
                    CerrarModal();
                    alertDanger("Ha ocurrido una incidencia, inténtelo nuevamente");
                    Limpiar();
                }
            });
        }

        function ConfirmarEdicion() {
            var respuesta = ValidacionesGenerales();

            if (respuesta == "") {
                $("#txtMostrar").text("editar");

                $("#btnEliminar").css('display', 'none');
                $("#btnAceptarEditar").css('display', '');

                $("#modalConfirmacion").modal("show");

            } else {
                alertDanger(respuesta)
            }
        }

        function SeleccionarSenCorto() {
            let sent = $("#ddlSentido").val();
            $("#btnEliminarSentido").css('display', '');
            $("#btnShowEdit").css('display', '');

            $("#ddlSentidoCorto option[value='" + sent + "']").attr("selected", "selected");
        }

        function SeleccionarSen() {
            let sent = $("#ddlSentidoCorto").val();
            $("#btnEliminarSentido").css('display', '');
            $("#btnShowEdit").css('display', '');

            $("#ddlSentido option[value='" + sent + "']").attr("selected", "selected");
        }

        function Sololetras(e) {
            var k;
            document.all ? k = e.keyCode : k = e.which;
            return ((k > 64 && k < 91) || (k > 96 && k < 123) || k == 8 || k == 32 || (k >= 48 && k <= 57));
        }

        function CamelCase(texto) {
            var mayuscula = "";
            var minuscula = "";
            var palabra = "";

            palabra = texto.value;

            if (!texto.value) return;

            mayuscula = palabra.substring(0, 1).toUpperCase();

            if (palabra.length > 0)
                minuscula = palabra.substring(1).toLowerCase();


            document.getElementById(texto.id).value = mayuscula.concat(minuscula);

            var nombre = $("#txtNomSentido").val();

            $.ajax({
                url: '../Mantenedor/GetSentidoByNombre',
                type: 'post',
                datatype: 'json',
                async: false,
                data: {
                    "nombre": nombre
                },
                success: function (data) {
                    if (data.data != "") {
                        alertDanger(data.data);
                        $("#txtNomSentido").val("");
                        $("#txtNomSentido").focus();
                    }

                }, error: function () {
                    alertDanger("Ha ocurrido una incidencia, inténtelo nuevamente");
                }
            });

        }

        function ValidacionesGenerales(sentido, sentidoCorto) {

            if (sentido == undefined || sentido.length < 1 || sentido == null)
                return "Debe ingresar un nombre del sentido para continuar";

            if (sentidoCorto == undefined || sentidoCorto == "" || sentidoCorto.length < 1 || sentidoCorto == null)
                return "Debe ingresar un nombre para el sentido corto para continuar";

            return "";
        }

        function VerNuevoSentido() {
            Limpiar();
            $("#btnGuardarEdicion").css("display", "none");
            $("#btnGuardarSentido").css("display", "");
            $(".ocultar").css("display", "");
        }

    </script>
}
