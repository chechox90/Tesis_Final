@{
    ViewBag.Title = "Servicios";
}

<style>
    .borderInput {
        margin: 10px;
    }

    .divFlot {
        text-align: right
    }

    .container-title {
        display: flex;
    }

    .btn-x {
        margin-left: auto
    }
</style>

<div class="page-title">
    <div class="content-title">
        <h3>Servicios</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page"><a href="#">Mantenedor</a></li>
            </ol>
        </nav>
    </div>
</div>

<div class="content-filters-b">
    <div class="card">
        <div class="form-row">
            <button class="btn btn-success" type="button" id="btnNuevoTerminal" onclick="VerNuevoServicio();"><i class="far fa-plus"></i> Nuevo Servicio</button>
        </div>
    </div>
</div>

<div class="card ocultar">
    <div class="modal-body">
        <div class="form-row container-title">
            <div class="borderInput">
                <h4 class="modal-title text-success">Nuevo Servicio</h4>
            </div>
            <button type="button" class="close col-mb-0 btn-x" onclick="Limpiar();" data-dismiss="modal" aria-label="Close">
                <i class="far fa-times"></i>
            </button>
        </div>
    </div>
    <div class="modal-body">
        <div class="form-row contiener-row">
            <hr class="col-12" />
            <div class="col-md-4">
                <div class="form-group borderInput">
                    <label for="NumeroServicio">Nombre Servicio</label>
                    <input id="txtNombreServicio" type="text" maxlength="6" onkeypress="return Sololetras(event)" onkeyup="UpperCase(this);" onblur="ValidarServicioExiste();" name="NumeroServicio" placeholder="Nombre Servicio" class="form-control" />
                </div>
            </div>
            <div class="col-md-3" id="divTxtEdit">
                <div class="form-group borderInput">
                    <label for="HoraInicio">Hora inicio del servicio</label>
                    <input id="txtHoraSerIni" type="time" maxlength="5" name="HoraInicio" placeholder="HH:mm" class="form-control" />
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group borderInput">
                    <label for="HoraFin">Hora fin del servicio</label>
                    <input id="txtHoraSerFin" type="time" maxlength="5" name="HoraFin" placeholder="HH:mm" class="form-control" />
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-outline-light" onclick="Limpiar();">Cancelar</button>
            <button type="button" class="btn btn-success" id="btnGuardarNuevo" onclick="GuardarNuevoServicio();"><i class="far fa-edit"></i>  Guardar</button>
            <button type="button" class="btn btn-success" id="btnGuardarEdicion" onclick="ConfirmarEdicion();"><i class="fas fa-edit"></i>  Guardar</button>
        </div>
    </div>
</div>

<br />

<div class="col-md-12 card" id="divServicios">
    <table id="tblServicios" class="table table-striped table-hover">
    </table>
</div>

<br />

<div class="modal fade" id="modalConfirmacion" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content shadow">
            <div class="modal-title">
                <div class="text-center">
                    <h3>¡Confirmar acción!</h3>
                </div>
            </div>
            <div class="modal-body">
                <label>¿Está seguro que desea <span id="txtMostrar"></span> el Servicio <span class="text-primary" id="serEliminar"></span>?</label>
            </div>
            <label id="idSerEliminar" style="display:none"></label>
            <label id="txtIdEmpresa" style="display:none"></label>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-light" id="btnCancela" onclick="CerrarModal();">Cancelar</button>
                <button type="button" class="btn btn-danger" id="btnAceptar" onclick="EliminarServicio();"><i class="fas fa-trash"></i> Eliminar</button>
                <button type="button" class="btn btn-success" id="btnConfirmar" onclick="GuardarEdicionServicio();"><i class="fas fa-check"></i> Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script>
        var tblServicio;
        $(document).ready(function () {
            $(".ocultar").css("display", "none");
            CargarServicios();
        });

        function CargarServicios() {
            tblServicio = $("#tblServicios").DataTable({
                dom: "<'card-header flex-column flex-lg-row align-items-start align-items-lg-center'<'d-flex flex-column flex-lg-row justify-content-start align-items-lg-center'<'titleRev mr-2'><'comboFil mb-2 mb-lg-0'>><'d-flex justify-content-md-end'fl>>" + "<'card-body p-0'tr>" + "<'card-footer'ip>",
                scrollX: true,
                processing: true,
                destroy: true,
                lengthChange: true,
                pageLength: 10,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Todos"]],
                language: {
                    "url": "../Plugins/DataTables/js/Spanish.json"
                },
                order: [[2, "asc"]],
                initComplete: function () {
                    $($.fn.dataTable.tables(true)).DataTable().columns.adjust();
                },
                ajax: {
                    url: "../Mantenedor/GetServiciosActivos",
                    type: "POST",
                    dataType: "json",
                    data: null
                },
                columns: [
                    { data: "ID_SERVICIO", visible: false, searchable: false },
                    { data: "ID_EMPRESA", visible: false, searchable: false },
                    { data: "NOMBRE_SERVICIO", title: "Nombre Servicio", name: "NOMBRE_SERVICIO", orderable: false },
                    { data: "HORARIO_INICIO", title: "Horario de inicio", name: "HORARIO_INICIO", orderable: false },
                    { data: "HORARIO_FIN_", title: "Horario de fin", name: "HORARIO_FIN", orderable: false },
                    {
                        title: "Gestión",
                        orderable: false,
                        searchable: false,
                        render: function (data, type, full, meta) {
                            var html = '';

                            html = '<a role="button" class="btn-table-bg " onclick="ShowEliminarServicio(' + full.ID_SERVICIO + ',' + "'" + full.NOMBRE_SERVICIO + "'" + ');"><i class="far fa-trash-alt text-danger"></i></a><span>&nbsp;&nbsp;</span>' +
                                '<a role="button" class="btn-table-bg " onclick="ShowEditarServicio(' + full.ID_SERVICIO + ',' + full.ID_EMPRESA + ',' + "'" + full.NOMBRE_SERVICIO + "'" + ','
                                + "'" + full.HORARIO_INICIO + "'" + ',' + "'" + full.HORARIO_FIN_ + "'" + ')"><i class="far fa-edit text-success"></i></a>';

                            return html;
                        }
                    },
                ]
            });
        }

        function EliminarServicio() {
            var idServicio = $("#idSerEliminar").val();

            $.ajax({
                url: '../Mantenedor/SetEliminarServicio',
                type: 'post',
                datatype: 'json',
                async: false,
                data: {
                    "idServicio": idServicio
                },
                success: function (data) {
                    if (data.Data.alert == "success") {
                        Limpiar();
                        setTimeout(function () {
                            alertSuccess(data.Data.message);
                        }, 500);
                        CerrarModal();
                        tblServicio.ajax.reload(null, false);

                    } else {
                        alertDanger(data.Data.message);
                    }
                },
                error: function () {
                    CerrarModal();
                    alertDanger("Ha ocurrido una incidencia, inténtelo nuevamente");
                    tblServicio.ajax.reload(null, false);
                }
            });
        }

        function ShowEliminarServicio(idServicio, nombreServicio) {
            Limpiar();

            $("#serEliminar").text(nombreServicio);
            $("#idSerEliminar").val(idServicio);
            $("#txtMostrar").text("editar");

            $("#btnConfirmar").css('display', 'none');
            $("#btnAceptar").css('display', '');

            $("#modalConfirmacion").modal("show");
        }

        function GuardarNuevoServicio() {
            let nombreSer = $("#txtNombreServicio").val();
            let horaIni = $("#txtHoraSerIni").val();
            let horaFin = $("#txtHoraSerFin").val();

            var respuesta = Validaciones(nombreSer, horaIni, horaFin);
            if (respuesta == "") {
                $.ajax({
                    url: '../Mantenedor/SetGuardarNuevoServicio',
                    type: 'post',
                    datatype: 'json',
                    async: false,
                    data: {
                        "nombreSer": nombreSer,
                        "horaIni": horaIni,
                        "horaFin": horaFin,
                    },
                    success: function (data) {
                        if (data.Data.alert == "success") {
                            Limpiar();
                            setTimeout(function () {
                                alertSuccess(data.Data.message);
                            }, 500);
                            CerrarModal();
                            tblServicio.ajax.reload(null, false);

                        } else {
                            alertDanger(data.Data.message);
                        }
                    },
                    error: function () {
                        CerrarModal();
                        alertDanger("Ha ocurrido una incidencia, lo resolveremos a la brevedad");
                        tblServicio.ajax.reload(null, false);
                    }
                });
            } else {
                alertDanger(respuesta);
            }

        }

        function CerrarModal() {
            $("#modalConfirmacion").modal("hide");
        }

        function VerNuevoServicio() {
            $(".ocultar").css("display", "");
            $("#btnGuardarNuevo").css('display', '');
            $("#btnGuardarEdicion").css('display', 'none');
        }

        function Limpiar() {
            $("#idSerEliminar").val("");
            $("#txtIdEmpresa").val("");
            $("#txtNombreServicio").val("");
            $("#txtHoraSerIni").val("");
            $("#txtHoraSerFin").val("");

            $(".ocultar").css("display", "none")
        }

        function ShowEditarServicio(idServicio, idEmpresa, nomServicio, Hini, Hfin) {
            $("#idSerEliminar").val(idServicio);
            $("#txtIdEmpresa").val(idEmpresa);
            $("#txtNombreServicio").val(nomServicio);
            $("#txtHoraSerIni").val(Hini);
            $("#txtHoraSerFin").val(Hfin);
            $("#serEliminar").text(nomServicio);

            $("#btnGuardarEdicion").css('display', '');
            $("#btnConfirmar").css('display', '');
            $("#btnConfirmar").css('display', '');

            $("#btnGuardarNuevo").css('display', 'none');
            $("#btnAceptar").css('display', 'none');

            $(".ocultar").css("display", "");
        };

        function GuardarEdicionServicio() {
            var SERVICIO =
            {
                ID_SERVICIO: $("#idSerEliminar").val(),
                ID_EMPRESA: $("#txtIdEmpresa").val(),
                NOMBRE_SERVICIO: $("#txtNombreServicio").val(),
                HORARIO_INI: $("#txtHoraSerIni").val(),
                HORARIO_FIN: $("#txtHoraSerFin").val(),
            };


            if (respuesta == "") {
                $.ajax({
                    url: '../Mantenedor/SetEditarServicio',
                    type: 'post',
                    datatype: 'json',
                    async: false,
                    data: {
                        "SERVICIO": SERVICIO
                    },
                    success: function (data) {
                        if (data.Data.alert == "success") {
                            setTimeout(function () {
                                alertSuccess(data.Data.message);
                            }, 500);
                            CerrarModal();
                            Limpiar();
                            tblServicio.ajax.reload(null, false);

                        } else {
                            alertSuccess(data.Data.message);
                            tblServicio.ajax.reload(null, false);
                        }

                    }, error: function () {
                        CerrarModal();
                        alertDanger("Ha ocurrido una incidencia, inténtelo nuevamente");
                        tblServicio.ajax.reload(null, false);
                    }
                });

            } else {
                alertDanger(respuesta);
            }
        }


        function Validaciones(nombreServicio, horarioInicio, horarioFin) {
            if (nombreServicio == undefined || nombreServicio == null || nombreServicio == "") {
                $("#txtNombreServicio").focus();
                return "Debe ingresar un nombre de servicio";
            }

            if (horarioInicio == "") {
                $("#txtHoraSerIni").focus();
                return "Debe ingresar una hora de inicio del servicio.";
            }

            if (horarioFin == "") {
                $("#txtHoraSerFin").focus();
                return "Debe ingresar una hora de fin del servicio"
            }

            return "";
        }

        function ConfirmarEdicion() {
            var NOMBRE_SERVICIO = $("#txtNombreServicio").val();
            var HORARIO_INI = $("#txtHoraSerIni").val();
            var HORARIO_FIN = $("#txtHoraSerFin").val();

            var respuesta = Validaciones(NOMBRE_SERVICIO, HORARIO_INI, HORARIO_FIN);

            if (respuesta == "") {
                $("#idSerEliminar").val();
                $("#txtMostrar").text("editar");

                $("#modalConfirmacion").modal("show");

            } else {
                alertDanger(respuesta);
            }
        }

        function Sololetras(e) {
            var k;
            document.all ? k = e.keyCode : k = e.which;
            return ((k > 64 && k < 91) || (k > 96 && k < 123) || k == 8 || k == 32 || (k >= 48 && k <= 57));
        }

        function ValidarServicioExiste() {
            var nombre = $("#txtNombreServicio").val();

            $.ajax({
                url: '../Mantenedor/GetServicioByNombre',
                type: 'post',
                datatype: 'json',
                async: false,
                data: {
                    "nombre": nombre
                },
                success: function (data) {
                    if (data.data != "") {
                        alertDanger(data.data);

                        $("#txtNombreServicio").val("");
                        $("#txtNombreServicio").focus();
                    }

                }, error: function () {
                    alertDanger("Ha ocurrido una incidencia, inténtelo nuevamente");
                }
            });
        }

        function UpperCase(texto) {
            var mayuscula = "";
            var palabra = "";

            palabra = texto.value;
            if (!texto.value) return;

            if (palabra.length > 0)
                mayuscula = palabra.toUpperCase();

            document.getElementById(texto.id).value = mayuscula;
        }

    </script>
}