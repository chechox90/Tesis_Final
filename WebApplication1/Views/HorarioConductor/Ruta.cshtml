                                <div class="divFlot">
                                    <button id="btnRegistrarFinVuelta" class="btn btn-success borderInput bloqueo" style="display:none" onclick="ShowCerrarVuelta();"><i class="fas fa-edit"></i> Finalizar Vuelta</button>
                                </div>
                            </div>
                        </div>
