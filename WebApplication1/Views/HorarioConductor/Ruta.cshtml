        function EliminarVuelta() {
            var idVuelta = $("#idVueEliminar").text();

            $.ajax({
                url: '../Mantenedor/SetEliminarVuelta',
                type: 'post',
                datatype: 'json',
                async: false,
                data: {
                    "idVuelta": idVuelta
                },
                success: function (data) {
                    if (data.Data.alert == "success") {
                        setTimeout(function () {
                            alertSuccess(data.Data.message);
                        }, 500);

                        CerrarModal();

                        tblRuta.ajax.reload(null, false);

                    } else {
                        alertDanger(data.Data.message);
                        tblRuta.ajax.reload(null, false);
                    }
                },
                error: function () {
                    CerrarModal();
                    alertDanger("Ha ocurrido una incidencia, inténtelo nuevamente");
                    tblRuta.ajax.reload(null, false);
                }
            });
        }

