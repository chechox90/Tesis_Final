@section scripts
    {
    <script>
        var tblRuta;

        $(document).ready(function () {
            CargarCmb();
            GetInicioTurno();
        });

        function CargarCmb() {
            $.ajax({
                url: '../Mantenedor/GetCargarTerminalesCmb',
                type: 'post',
                datatype: 'json',
                async: false,
                data: null,
                success: function (data) {
                    for (var i = 0; i < data.data.length; i++) {
                        var optionTer = $(document.createElement('option'));
                        optionTer.val(data.data[i]["ID_TERMINAL"]);
                        optionTer.text(data.data[i]["NOMBRE_TERMINAL"]);

                        $(".cmbTer").append(optionTer);
                    }
                }
            });

            $.ajax({
                url: '../Mantenedor/GetSentidoCmb',
                type: 'post',
                datatype: 'json',
                async: false,
                data: null,
                success: function (data) {
                    for (var i = 0; i < data.data.length; i++) {
                        var optionSent = $(document.createElement('option'));
                        optionSent.val(data.data[i]["ID_SENTIDO"]);
                        optionSent.text(data.data[i]["NOMBRE_SENTIDO"]);

                        $(".cmbSent").append(optionSent);
                    }
                }
            });

            $.ajax({
                url: '../Mantenedor/GetServiciosActivosCmb',
                type: 'post',
                datatype: 'json',
                async: false,
                data: null,
                success: function (data) {
                    for (var i = 0; i < data.data.length; i++) {
                        var optionSent = $(document.createElement('option'));
                        optionSent.val(data.data[i]["ID_SERVICIO"]);
                        optionSent.text(data.data[i]["NOMBRE_SERVICIO"]);

                        $(".cmbSer").append(optionSent);
                    }
                }
            });

            $.ajax({
                url: '../Mantenedor/GetBusesActivosCmb',
                type: 'post',
                datatype: 'json',
                async: false,
                data: null,
                success: function (data) {
                    for (var i = 0; i < data.data.length; i++) {
                        var optionSent = $(document.createElement('option'));
                        optionSent.val(data.data[i]["ID_BUS"]);
                        optionSent.text(data.data[i]["NOMBRE_TERMINAL"]);

                        $(".cmbBus").append(optionSent);
                    }
                }
            });

            $.ajax({
                url: '../Reprogramacion/GetCargarTunosDisponiblesCmb',
                type: 'post',
                datatype: 'json',
                async: false,
                data: null,
                success: function (data) {
                    if (data.data.length > 1) {
                        for (var i = 0; i < data.data.length; i++) {
                            var optionSent = $(document.createElement('option'));
                            optionSent.val(data.data[i]["ID_HORARIO"]);
                            optionSent.text(data.data[i]["HORA_INICIO"]);

                            $("#cmbTurnosDisponibles").append(optionSent);
                        }
                    } else {
                        for (var i = 0; i < data.data.length; i++) {
                            var optionSent = $(document.createElement('option'));
                            optionSent.val(data.data[i]["ID_HORARIO"]);
                            optionSent.text(data.data[i]["HORA_INICIO"]);

                            $("#cmbTurnosDisponibles").append(optionSent);
                        }

                        $("#modalInformacion").modal("show");
                        $(".bloqueo").prop("disabled", true);
                    }

                }
            });
        }

        function GetInicioTurno() {
            $.ajax({
                url: '../Mantenedor/GetInicioTurno',
                type: 'post',
                datatype: 'json',
                async: false,
                data: null,
                success: function (data) {
                    if (data.data.ID_REGISTRO_HORARIO > 0) {
                        $("#idTurnoActual").val(data.data.ID_REGISTRO_HORARIO)
                        $("#txtHoraInicio").val(data.data.HORA_INICIO);
                        $("#lblTerminalJornadainicio").text(data.data.NOMBRE_TERMINAL);

                        $("cmbTerminalInicio option").attr("selected", false);
                        $("#cmbTerminalInicio option[value='" + data.data.ID_TERMINAL_INICIO + "']").attr("selected", "selected");

                        $("cmbTurnosDisponibles option").attr("selected", false);
                        $("#cmbTurnosDisponibles option[value='" + data.data.ID_HORARIO + "']").attr("selected", "selected");

                        $("#btnRegistrarInicio").css('display', 'none');
                        $(".Ini").prop('disabled', true);

                        $("#btnRegistrarIniVuelta").css('display', '')
                        $("#btnShowFin").css('display', '')

                        CargarTablaRuta();
                    } else {
                        $("#btnRegistrarInicio").css('display', '');
                        $("#btnRegistrarIniVuelta").css('display', 'none');
                        $("#btnSalir").css('display', 'none');
                        $("#btnShowFin").css('display', 'none');
                        $(".Ini").prop('disabled');

                        CargarTablaRuta();
                    }

                }
            });

        }

        function CargarTablaRuta() {
            let idTurnoActual = 0;

            if ($("#idTurnoActual").val() != "") {
                idTurnoActual = $("#idTurnoActual").val();
            }

            tblRuta = $("#tblRuta").DataTable({
                dom: "<'card-header flex-column flex-lg-row align-items-start align-items-lg-center'<'d-flex flex-column flex-lg-row justify-content-start align-items-lg-center'<'titleRev mr-2'><'comboFil mb-2 mb-lg-0'>><'d-flex justify-content-md-end'fl>>" + "<'card-body p-0'tr>" + "<'card-footer'ip>",
                scrollX: true,
                processing: true,
                destroy: true,
                lengthChange: true,
                pageLength: 10,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Todos"]],
                language: {
                    "url": "../Plugins/DataTables/js/Spanish.json"
                },
                order: [[1, "asc"]],
                initComplete: function () {
                    $($.fn.dataTable.tables(true)).DataTable().columns.adjust();
                },
                ajax: {
                    url: "../Mantenedor/GetRegistroVueltas",
                    type: "POST",
                    dataType: "json",
                    data: {
                        "idHorarioActual": idTurnoActual
                    }
                },
                columns: [
                    { data: "ID_REGISTRO_VUELTAS", visible: false, searchable: false },
                    { data: "NUMERO_VUELTA", title: "N°", name: "NUMERO_VUELTA" },

                    { data: "NOMBRE_TERMINAL_INICIO", title: "Terminal inicio", orderable: false },
                    { data: "NOMBRE_SERVICIO_INICIO", title: "Servicio inicio", name: "SERVICIO_INICIO", searchable: false },
                    { data: "NUMERO_BUS_INICIO", title: "Bus inicio", name: "BUS", searchable: false },
                    { data: "SEN_INI_CORTO", title: "Sentido Inicio", name: "SERVICIO_INICIO", searchable: false },
                    {
                        data: null
                        , title: "Fecha Inicio"
                        , orderable: false,
                        render:
                            function (full) {
                                if (full.FECHA_HORA_INICIO != null) {
                                    return moment(full.FECHA_HORA_INICIO).format('DD/MM/YYYY HH:MM');
                                } else {
                                    return "";
                                }

                            }
                    },

                    { data: "NOMBRE_TERMINAL_FIN", title: "Terminal fin", name: "NOMBRE_TERMINAL_FIN", orderable: false },
                    { data: "NOMBRE_SERVICIO_FIN", title: "Servicio fin", name: "NOMBRE_SERVICIO_FIN", searchable: false },
                    { data: "SEN_FIN_CORTO", title: "Sentido fin", name: "SEN_FIN_CORTO", searchable: false },
                    {
                        data: null
                        , title: "Bus fin"
                        , orderable: false,
                        render:
                            function (full) {
                                if (full.NUMERO_BUS_FIN > 0) {
                                    return full.NUMERO_BUS_FIN;
                                } else {
                                    return "";
                                }

                            }

                    },
                    {
                        data: null
                        , title: "Fecha fin"
                        , orderable: false,
                        render:
                            function (full) {
                                if (full.FECHA_HORA_FIN != null) {
                                    $("#lblAviso1").css("display", "none");
                                    $("#lblAviso2").css("display", "none");
                                    $("#btnShowFin").css("display", "");
                                    $("#btnRegistrarFinVuelta").css("display", "");
                                    $("#btnRegistrarFinVuelta").css("display", "none");
                                    $(".lockedFinalizar").prop("disabled");
                                    $("#btnShowFin").css("display", "");
                                    $("#btnRegistrarInicio").css('display', 'none');
                                    $("#btnRegistrarIniVuelta").css('display', '');
                                    $("#btnSalir").css("display", "");

                                    return moment(full.FECHA_HORA_FIN).format('DD/MM/YYYY HH:MM');
                                } else {
                                    $("#btnRegistrarIniVuelta").css("display", "none");
                                    $("#btnShowFin").css("display", "none");
                                    $("#btnSalir").css("display", "none");

                                    $("#btnRegistrarFinVuelta").css("display", "");
                                    $("#btnRegistrarFinVuelta").css("display", "");
                                    $("#lblAviso1").css("display", "");
                                    $("#lblAviso2").css("display", "");

                                    $(".lockedFinalizar").prop("disabled", true)

                                    return "";
                                }

                            }
                    },
                    {
                        title: "Gestión",
                        orderable: false,
                        searchable: false,
                        render: function (data, type, full, meta) {
                            var html = '';
                            $("#idVueltaActual").val(full.ID_REGISTRO_VUELTAS);
                            html = '<a role="button" class="btn-table-bg " onclick="ShowEliminarVuelta(' + full.ID_REGISTRO_VUELTAS + ');"><i class="far fa-trash-alt text-danger"></i></a><span>&nbsp;&nbsp;</span>';
                            console.log(full.NOMBRE_TERMINAL_FIN)
                            if (full.NOMBRE_TERMINAL_FIN != null) {
                                html = html + '<a href="/Mantenedor/GetEditarVuelta?idVuelta=' + full.ID_REGISTRO_VUELTAS + '"><i class="far fa-edit text-success"></i>\</a>';
                            }

                            return html;
                        }
                    },
                ]
            });
        }

        function RegistrarInicioHorario() {
            let terminalInicio = $("#cmbTerminalInicio").val();
            let HoraInicio = $("#txtHoraInicio").val();
            let idHorarioCond = $("#cmbTurnosDisponibles option:selected").val();

            if (idHorarioCond == 0) {
                alertDanger("Seleccione una hora disponible para continuar.");
                return;
            }

            if (terminalInicio == 0) {
                alertDanger("Seleccione un terminal de inicio para continuar.");
                return;
            }

            if (HoraInicio == "") {
                alertDanger("Ingresa una hora de inicio de horario para continuar.");
                return;
            }

            

            $.ajax({
                url: '../Mantenedor/SetRegistroInicioHorario',
                type: 'post',
                datatype: 'json',
                async: false,
                data: {
                    "HoraInicio": HoraInicio,
                    "Idterminal": terminalInicio,
                    "idHorarioCond": idHorarioCond
                },
                success: function (data) {
                    if (data.alert != '') {
                        alertSuccess(data.Data.message);
                        GetInicioTurno();
