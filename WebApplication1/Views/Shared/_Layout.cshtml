@* Versión 1.3 *@

@{
    ViewBag.idRol = WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().RUT;
}

<!DOCTYPE html>
<html lang="es-cl">
<head>
    <meta http-equiv="X-UA-Compatible" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - @WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().Proyecto.NombreVisible Web @WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().Proyecto.Version</title>
    <link href="~/Images/Logo_CdeR.svg" type="image/x-icon" rel="icon" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet" />

    @Styles.Render("~/Plugins/JqueryUi/css")
    @Styles.Render("~/Plugins/SweetAlerts2/css")
    @Styles.Render("~/Plugins/FontAwesome/css")
    @Styles.Render("~/Plugins/Normalize/css")
    @Styles.Render("~/Plugins/Bootstrap/css")
    @Styles.Render("~/Plugins/DataTables/css")
    @Styles.Render("~/Plugins/DateRangePicker/css")
    @Styles.Render("~/Plugins/Plyr/css")
    @Styles.Render("~/Plugins/TailSelect/css")
    @Styles.Render("~/Content/WebApp/Intranet/css")
</head>
<body>
    <div id="resize-content" class="bg-white">
        <nav class="sidebar-fixed">
            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link">
                        <div class="nav-logo">
                            <img src="~/Images/Logo_CdeR.svg" alt="Logo Modulo" class="img-fluid" />
                        </div>
                    </a>
                </li>
                <li class="nav-item d-block d-md-none">
                    <a class="nav-link toggler" href="#"><i class="fas fa-arrow-right"></i></a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Soporte">
                    <a class="nav-link" href="#" role="button" data-toggle="modal" data-target="#modalSupport"><i class="far fa-life-ring"></i></a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Ayuda">
                    <a class="nav-link" href="#" role="button" data-toggle="modal" data-target="#modalHelp"><i class="far fa-question-circle"></i></a>
                </li>
                <li class="nav-item d-none d-md-block" data-toggle="tooltip" data-placement="right" title="Maximizar">
                    <a class="nav-link" href="#" id="togglerScreen" role="button"><i class="fas fa-expand"></i></a>
                </li>
            </ul>
            <ul class="nav flex-column mt-auto mb-3">
                <li class="nav-item d-none" data-toggle="tooltip" data-placement="right" title="Novedades">
                    <a class="nav-link position-relative" href="#" data-toggle="modal" data-target="#modalNews">
                        <span class="alert-circle d-none"></span>
                        <i class="fas fa-bell"></i>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Ir a Gmail">
                    <a class="nav-link" href="https://www.google.com/gmail" target="_blank"><i class="fab fa-google"></i></a>
                </li>
                <li class="nav-item d-none" data-toggle="tooltip" data-placement="right" title="Ayúdanos a Mejorar">
                    <a class="nav-link" href="#" role="button" data-toggle="modal" data-target="#exampleModalCenter"><i class="fas fa-hands-helping"></i></a>
                </li>
                <li class="nav-item d-none d-md-block" data-toggle="tooltip" data-placement="right" data-html="true" title="<b>Versión @WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().Proyecto.NombreVisible Web:</b> @WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().Proyecto.Version <br><small class='text-white'>Optimizado para PC, Tablet y Celular.</small><br> <b>Navegadores Compatibles:<br></b> <i class='fab fa-chrome'></i> Google Chrome (v.73.0). <br> <i class='fab fa-firefox'></i> Mozilla Firefox (v.65.0).">
                    <a class="nav-link" href="#"><i class="far fa-info-circle"></i></a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Tu Perfil">
                    <a class="nav-link" href="#" data-toggle="modal" data-target="#modalUser">
                        <div class="nav-foto">
                            <img src="~/Images/img-user.png" alt="Imagen Usuario Conectado" class="img-fluid" />
                        </div>
                    </a>
                </li>
            </ul>
        </nav>

        <!--Menu Usuario-->
        <aside class="sidebar">
            @Html.Partial("~/Views/Shared/_MenuLayout.cshtml")
        </aside>

        <main class="content">
            @RenderBody()
        </main>

        <a id="toTop" class="btn-primary" onclick="topFunction()"></a>

        <!-- Modal Ayúdanos a Mejorar -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="exampleModalCenterTitle">Ayúdanos a Mejorar</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="modal-body pt-1 pb-0">
                        <p>Envíanos tus sugerencias, ideas o aportes. Valoramos todas y cada una de ellas para seguir trabajando en ofrecer contenidos y servicios de mayor calidad.</p>
                        <form>
                            <div class="form-group">
                                <textarea class="form-control" rows="10" required=required></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-dismiss="modal">Cancelar</button>
                        <input class="btn btn-primary" type="submit" value="Enviar" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Help -->
        <div class="modal fade" id="modalHelp" tabindex="-1" role="dialog" aria-labelledby="modalHelp" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Centro de ayuda</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <i class="far fa-times"></i>
                        </button>
                    </div>
                    <div class="modal-body pt-0">
                    </div>
                    <div class="modal-footer pt-0"></div>
                </div>
            </div>
        </div>

        <!-- Modal Support -->
        <div class="modal fade" id="modalSupport" tabindex="-1" role="dialog" aria-labelledby="modalSupport" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable left m-0 mr-auto" role="document">
                <div class="modal-content h-100vh rounded-0">
                    <div class="modal-header justify-content-start">
                        <button type="button" class="close mr-3" data-dismiss="modal" aria-label="Close">
                            <i class="far fa-arrow-left"></i>
                        </button>
                        <h4 class="modal-title">Centro de soporte</h4>
                    </div>
                    <div class="modal-body pt-0">
                        <div class="media bg-light mb-3">
                            <div class="circle-60 bg-soft-primary my-3 ml-3">
                                <i class="fad fa-window-alt fa-2x text-primary"></i>
                            </div>
                            <div class="media-body">
                                <h5 class="mb-3">Soporte de sistemas</h5>
                                <p>¿Dudas o problemas con nuestro sistema?</p>
                                <div class="d-flex">
                                    <a class="btn btn-primary" href="mailto:ayudasoluinfo@souinfo.cl" role="button">Enviar correo</a>
                                    <a class="btn btn-link" href="tel:+56982373973" role="button"><i class="far fa-phone d-md-none mr-2"></i> Llamar <span class="d-none d-md-inline-flex">por teléfono</span></a>
                                </div>
                            </div>
                        </div>
                        <div class="media bg-light mb-3">
                            <div class="circle-60 bg-soft-primary my-3 ml-3">
                                <i class="fad fa-print fa-2x text-primary"></i>
                            </div>
                            <div class="media-body">
                                <h5 class="mb-3">Soporte técnico</h5>
                                <p>¿Necesita ayuda con su cuenta?</p>
                                <div class="d-flex">
                                    <a class="btn btn-primary" href="mailto:ayudasoluinfo@soluinfo.cl" role="button">Enviar correo</a>
                                    <a class="btn btn-link" href="tel:+56982373973" role="button"><i class="far fa-phone d-md-none mr-2"></i> Llamar <span class="d-none d-md-inline-flex">por teléfono</span></a>
                                </div>
                            </div>
                        </div>
                        <div class="media bg-light mb-3">
                            <div class="circle-60 bg-soft-primary my-3 ml-3">
                                <i class="fad fa-wifi-2 fa-2x text-primary"></i>
                            </div>
                            <div class="media-body">
                                <h5 class="mb-3">Soporte de redes y comunicaciones</h5>
                                <p>¿Desea recibir capacitación del uso del aplicativo?</p>
                                <div class="d-flex">
                                    <a class="btn btn-primary" href="mailto:capacitaciones@soluinfo.cl" role="button">Enviar correo</a>
                                    <a class="btn btn-link" href="tel:+56982373973" role="button"><i class="far fa-phone d-md-none mr-2"></i> Llamar <span class="d-none d-md-inline-flex">por teléfono</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal User -->
        <div class="modal fade" id="modalUser" tabindex="-1" role="dialog" aria-labelledby="modalUser" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content shadow">
                    <div class="modal-body d-flex flex-column pt-4 px-4 pb-0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <i class="far fa-arrow-left"></i>
                        </button>
                        <div class="user bg-primary">
                            <div class="foto">
                                <img src="~/Images/img-user.png" alt="Imagen Usuario Conectado" class="img-fluid" />
                            </div>
                            <p class="username"> @WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().NombreCompleto</p>
                            <small class="text-white-75">@WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().Perfiles.FirstOrDefault().Nombre</small>
                            <div class="user-social mt-3">
                                <ul class="nav justify-content-center">
                                    <li class="nav-item mr-2">
                                        <a class="nav-link" href="https://www.google.com/gmail" data-toggle="tooltip" data-placement="bottom" title="Gmail" target="_blank"><i class="fab fa-google"></i></a>
                                    </li>
                                    <li class="nav-item mr-2">
                                        <a class="nav-link" href="https://drive.google.com/drive/my-drive" data-toggle="tooltip" data-placement="bottom" title="Drive" target="_blank"><i class="fab fa-google-drive"></i></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://twitter.com/busesvulesa" data-toggle="tooltip" data-placement="bottom" title="Twitter" target="_blank"><i class="fab fa-twitter"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="user-details">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item px-2">
                                    <span class="user-details-title"><i class="fal fa-user"></i> R.U.N.</span>
                                    <span class="user-details-desc">@ViewBag.idRol</span>
                                </li>
                                <li class="list-group-item px-2">
                                    <span class="user-details-title"><i class="far fa-envelope"></i> E-mail</span>
                                    <span class="user-details-desc">@WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().CORREO</span>
                                </li>
                                <li class="list-group-item px-2">
                                    <span class="user-details-title"><i class="far fa-map-marker-alt"></i> Ubicación</span>
                                    <span class="user-details-desc">Recursos Humanos</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-start p-4">
                        <div class="jumbotron w-100 p-2">
                            <div class="d-flex justify-content-between pt-2 px-2">
                                <label>Sesión</label>
                                <i class="far fa-info-circle text-primary" data-toggle="tooltip" data-placement="top" title="Recuerda cambiar tu contraseña periódicamente"></i>
                            </div>
                            <ul class="nav flex-column w-100">
                                <li class="nav-item">
                                    <a class="nav-link hover-primary px-2"
                                       href="/Account/CambioPassword"
                                       data-ajax="true"
                                       data-ajax-method="Get"
                                       data-ajax-mode="replace"
                                       data-ajax-update="#modalPassword"
                                       data-ajax-success="ShowModalPassword"
                                       data-dismiss="modal"><i class="far fa-unlock-alt"></i>Cambiar Contraseña</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link hover-danger px-2" href="/Account/Salir"><i class="far fa-sign-out"></i>Cerrar Sesión</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Modal News -->
        <div class="modal fade" id="modalNews" tabindex="-1" role="dialog" aria-labelledby="modalNews" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content shadow">
                    <div class="modal-header">
                        <button type="button" class="close hover-white" data-dismiss="modal" aria-label="Close">
                            <i class="fas fa-arrow-left"></i>
                        </button>
                        <h4 class="pl-3 mb-0 mr-auto">Novedades</h4>
                        <a href="#" class="btn-link text-info" data-toggle="popover" data-placement="bottom" data-html="true" data-content="<i class='fas fa-circle text-primary'></i> Nuevas Funcionalidades. <br> <i class='fas fa-circle text-success'></i> Cambios y Correcciones. <br> <i class='fas fa-circle text-info'></i> Informaciones. <br> <i class='fas fa-circle text-danger'></i> Eliminación de Funcionalidades. <br>">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </div>
                    <div class="modal-body p-0">
                        <ul class="list-group">
                            <li class="list-group-item justify-content-between align-items-start bg-light py-3 border-top-0">
                                <div class="p-0">
                                    <h5 class="text-secondary mb-1">@WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().Proyecto.NombreVisible</h5>
                                    <p class="mb-0"><small>@WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().Proyecto.FechaVersion.ToString("dddd, dd MMMM yyyy")</small></p>
                                </div>
                                <div class="p-0">
                                    <span class="badge badge-pill badge-primary">@WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().Proyecto.Version</span>
                                </div>
                            </li>

                            @foreach (DLL.DTO.Seguridad.DTO_Novedades Novedad in WebApplication1.Models.Commons.FrontUser.GetSessionUsuario().Proyecto.Novedades.OrderBy(x => x.Orden))
                            {
                                <li class="list-group-item">
                                    <div class="pr-3">
                                        <i class='fas fa-circle @Novedad.TipoNovedad.Color'></i>
                                    </div>
                                    <div class="p-0">
                                        <h6 class="list-group-title">@Novedad.Titulo</h6>
                                        <p class="list-group-text">@Novedad.Descripcion</p>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="modalNormal" tabindex="-1" role="dialog"></div>

    <div class="modal fade pl-0" id="modalPassword" tabindex="-1" role="dialog" aria-labelledby="modalPassword" aria-hidden="true"></div>

    <%: Ajax.GlobalizationScript() %>
    @Scripts.Render("~/Plugins/jquery")
    @Scripts.Render("~/Plugins/SweetAlerts2/js")
    @Scripts.Render("~/Plugins/JqueryUi/js")
    @Scripts.Render("~/Plugins/Bootstrap/js")
    @Scripts.Render("~/Plugins/DataTables/js")
    @Scripts.Render("~/Plugins/jquery-validate")
    @Scripts.Render("~/Plugins/ajax")
    @Scripts.Render("~/Plugins/moment")
    @Scripts.Render("~/Plugins/DateRangePicker/js")
    @Scripts.Render("~/Plugins/Plyr/js")
    @Scripts.Render("~/Plugins/TailSelect/js")
    @Scripts.Render("~/Plugins/HighCharts")
    @Scripts.Render("~/Scripts/Intranet/js")
    @RenderSection("scripts", required: false)
</body>
</html>
